/* components/imgsUpload.wxss */


	.w-100{
		width: 100%;
	}
	
	.flex {
		/* 转为弹性盒模型*/
		display: flex;
	}
	
	.flex_bet {
		/* 两端左右*/
		display: flex;
		justify-content: space-between;
	}
	
	.flex_xy_center{
		display: flex;
		justify-content: center;
		align-items: center;
	}
	
	.flex_wrap {
		/* 转为弹性盒模型并自动换行*/
		display: flex;
		flex-wrap: wrap;
	}
	
	.upload-img-view {
		height: 200rpx;
		width: 32%;
		border-radius: 10rpx;
		border: 4rpx dotted #e1e1e1;
		/* background-color: #F1F1F1; */
	}

	.upload-img-view>image {
		width: 70rpx;
		height: 70rpx;
	}

	.imgs-view {
		height: 200rpx;
		width: 31.5%;
		border-radius: 10rpx;
		margin-right: 1.8%;
		margin-bottom: 16rpx;
		border: 1rpx solid #e1e1e1;
		box-sizing: border-box;
		position: relative;
	}

	.imgs-view>image {
		width: 100%;
		height: 100%;
		border-radius: 10rpx;
	}

	.tip {
		font-size: 24rpx;
		color: #FF0000;
		margin-top: 12rpx;
	}

	.tip>label {
		color: #009100;
	}

	.del-btn {
		position: absolute;
		top: 0;
		right: 0;
		width: 32rpx;
		height: 32rpx;
		z-index: 999;
	}

	.del-btn>image {
		width: 100%;
		height: 100%;
		display: flex;
	}